<!DOCTYPE html>
<html>
  <head>
    <title>Billboard  Year End Hot 100 Singles</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'Billboard', root_path, class: 'navbar-brand' %>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Artist', artists_path %></li>
          </ul>

        <%= search_form_for @q, html: { class: 'navbar-form navbar-left' } do |f| %>
          <%= f.input :title_cont, label: false, placeholder: 'title' %>
          <%= f.input :display_artist_cont, label: false, placeholder: 'display_artist' %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
